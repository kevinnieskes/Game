<Window x:Class="Game.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle!" Height="391" Width="496">
    <Grid>
        <Canvas x:Name="MainCanvas" HorizontalAlignment="Left" Height="351" VerticalAlignment="Top" Width="488">
            <Canvas x:Name="BattleCanvas" HorizontalAlignment="Left" Height="186" VerticalAlignment="Top" Width="489">
                <Image Height="234" Source="country-platform-preview.png" Stretch="Fill" Width="489"/>
                <MediaElement Name ="Player1Image" Height="46" Source="" Width="68" Canvas.Left="67" Canvas.Top="161"/>
                <MediaElement Name ="Player2Image" Source= "" Height="53" Canvas.Left="391" Canvas.Top="150" Width="72"/>
                <TextBlock x:Name="YourHP" Canvas.Left="43" TextWrapping="Wrap" Text="Your Health:" Canvas.Top="10" Width="127" Height="17" FontWeight="Bold" FontStyle="Italic"/>
                <TextBlock x:Name="EnemyHP" Canvas.Left="343" TextWrapping="Wrap" Text="Enemy Health:" Canvas.Top="11" Width="126" FontWeight="Bold" FontStyle="Italic"/>
                <TextBlock x:Name="YourGrenades" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Grenades:" VerticalAlignment="Top" Width="66" Canvas.Left="43" Canvas.Top="32" FontWeight="Bold"/>
                <TextBlock x:Name="EnemyGrenades" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Grenades:" VerticalAlignment="Top" Width="66" Canvas.Left="343" Canvas.Top="32" FontWeight="Bold"/>
            </Canvas>
            <Button x:Name="ShootButton" Content="Shoot!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="ShootButton_Click" Canvas.Left="19" Canvas.Top="319"/>
            <Button x:Name="GrenadeButton" Content="Throw Grenade!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="107" Click="GrenadeButton_Click" Canvas.Left="111" Canvas.Top="319" />
            <Button x:Name="HealButton" Content="Heal" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="HealButton_Click" Canvas.Left="237" Canvas.Top="319"/>
            <TextBox x:Name="SinglePlayerBox" HorizontalAlignment="Left" Height="70" TextWrapping="Wrap" VerticalAlignment="Top" Width="337" Canvas.Top="244" Canvas.Left="19"/>
            <Button x:Name="NewEnemyButton" Content="Next Enemy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="NewEnemyButton_Click" IsEnabled="False" Canvas.Left="361" Canvas.Top="244"/>
            <Button x:Name="AimButton" Content="Aim" Canvas.Left="334" Canvas.Top="319" Width="75" Click="AimButton_Click"/>

        </Canvas>

    </Grid>
</Window>
